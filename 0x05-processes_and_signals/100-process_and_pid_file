#!/usr/bin/env bash
# Creates the file /var/run/holbertonscript.pid containing it PID
# Displays "To infinity and beyond" indefinitely
# Displays "I hate the kill command" when receive a SIGTERM
# Displays "Y U no love me?!" when receiving a igint signal
# Deletes the file /var/run/holbertonscript.pid and terminate itself when receiving a SIGQUIT or SIGTERM signal

echo "$$" > /var/run/holbertonscript.pid
trap "echo 'I hate the kill command'; rm /var/run/holbertonscript.pid; exit" SIGTERM
trap "rm /var/run/holbertonscript.pid; exit" SIGQUIT
trap "echo 'Y U no love me?!'" SIGINT
while true; do
      echo "To infinity and beyond"
      sleep 2
done
